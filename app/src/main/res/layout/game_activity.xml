<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="@string/player_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_players_turn_guest" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/player_turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_players_turn_guest2" android:layout_marginTop="8dp"
